include ./input


doctype html
head
    meta(name='viewport' content='width=device-width, initial-scale=1')
    script(src="https://code.jquery.com/jquery-3.5.1.min.js")
    link(rel="stylesheet", href="/styles/style.css")
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous")
    link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css')
    title="users"
body
    nav.navbar.card.mx-3.my-4.mb-5.align-items-start
        .flex-row
            h2.px-5 users


    main
        each user in users
            .card.mx-5.my-4.each-user(style="max-width: 100vw;" data-id= user['id'])
                .row
                    .col-md-1.col-xs-1.mx-3.mt-4.ml-5.avatar.my-auto
                        .card-body
                            img(src=user["avatar"], alt="avatar", style="width: 5vw; height: 10vh; border-radius: 100px")
                    .col-md-2.col-xs-1.block.my-auto
                        .surname.card-body
                            +input-field(user["surname"])
                        .name.card-body
                            +input-field(user["name"])
                        .patronymic.my-auto.card-body
                            +input-field(user["patronymic"])
                    .col-md-2.col-xs-1.birthday.my-auto
                        .card-body
                            +input-field(user["birthday"])
                    .col-md-2.col-xs-1.email.my-auto
                        .card-body
                            +input-field(user["email"], "email")
                    .col-md-1.col-xs-1.role.my-auto
                        .card-body
                            select.form-control.role#role(value=user['role'])
                                option(selected= user['role']==="User") User
                                option(selected= user['role']==="Admin") Admin
                    .col-md-2.col-xs-1.status.my-auto
                        .card-body
                            select.form-control.status#status(value=user['status'])
                                option(selected= user['status'] === "Active") Active
                                option(selected= user['status'] === "Not verified") Not verified
                                option(selected= user['status'] === "Blocked") Blocked
                    .col-md-1.col-xs-2.settings.my-auto
                        .card-body 
                            button(type='button' class="btn btn-edit" data-id= user['id'])
                                i.fa-solid.fa-gear
                        .col-md-1.col-xs-1.news.my-auto
                            .card-body 
                                button(type='button' class="btn btn-friends" data-id=user['id'])
                                    i.fa-solid.fa-user-group
                            .col-md-1.col-xs-1.news.my-auto
                                .card-body 
                                    button(type='button' class="btn btn-news" data-id= user['id'])
                                        i.fa-solid.fa-newspaper

